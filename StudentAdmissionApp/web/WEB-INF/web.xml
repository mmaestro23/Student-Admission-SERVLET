<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AdmissionFilter</filter-name>
        <filter-class>uni.controller.AdmissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdmissionFilter</filter-name>
        <servlet-name>Admission</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>UserRegister</servlet-name>
        <servlet-class>uni.controller.UserRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>uni.controller.UserLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Admission</servlet-name>
        <servlet-class>uni.controller.Admission</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmEmail</servlet-name>
        <servlet-class>uni.controller.ConfirmEmail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRegister</servlet-name>
        <url-pattern>/userRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Admission</servlet-name>
        <url-pattern>/admission</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmEmail</servlet-name>
        <url-pattern>/ConfirmEmail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
